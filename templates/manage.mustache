<table class="table table-hover mt-3">
   <thead class="thead-dark">
    <tr>
      <th scope="col" class="text-center">Subject Name</th>
      <th scope="col" class="text-center">CQ Mark</th>
      <th scope="col" class="text-center">MCQ Mark</th>
      <th scope="col" class="text-center">Total</th>
      <th scope="col" class="text-center">Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#texttodisplay}}
     <tr>
          <td class="text-center">{{subject_name}}</td>
          <td class="text-center">{{cq_mark}}</td>
          <td class="text-center">{{mcq_mark}}</td>
          
          <td class="text-center">{{total}}</td>
          
          <td class="text-center">
              <a href="{{editurl}}?id={{id}}" class="btn btn-info">Edit </a>
              <a href="{{deleteurl}}?id={{id}}" class="btn btn-danger">Delete</a>
          </td>
     </tr>
    {{/texttodisplay}}
    <tr class="thead-dark">
       <th class="text-center">Average</th>
       <th class="text-center">{{avgCQ}}</th>
       <th class="text-center">{{avgMCQ}}</th>
       <th class="text-center">{{avgTotal}}</th>
       <th></td>
    </tr>
  </tbody>
</table>

<div class="text-center mt-5 pt-5">
    <a href="{{editurl}}" class="btn btn-primary fw-bolder">Create New Entry</a>
</div>

